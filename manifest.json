{
  "manifest_version": 3,
  "name": "Pok√©mon Center Queue Tracker",
  "version": "1.0",
  "permissions": ["webRequest", "activeTab", "scripting"],
  "host_permissions": ["*://*.pokemoncenter.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pokemoncenter.com/*"],
      "js": ["overlay.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}